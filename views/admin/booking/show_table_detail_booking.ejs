<div class="card shadow mb-4">
  <div class="card-header">
    <a href="/admin/booking" class="btn btn-warning float-left">Back</a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-4">
        <img src="https://server-bwa-staycation.herokuapp.com/<%= booking.payments.proofPayment %>" alt="imageUrl"
          style="width: 100%; display: block;" />
        <div class="row">
          <% if (booking.payments.status == "Proses") { %>
          <div class="col-6">
            <form action="/admin/booking/confirmation/<%= booking.id %>?_method=PUT" method="POST">
              <button type="submit" class="btn btn-sm btn-success btn-block">
                <i class="fas fa-check"></i>
                Confirmation
              </button>
            </form>
          </div>
          <div class="col-6">
            <form action="/admin/booking/reject/<%= booking.id %>?_method=PUT" method="POST">
              <button type="submit" class="btn btn-sm btn-danger btn-block">
                <i class="fas fa-times"></i>
                Reject
              </button>
            </form>
          </div>
          <% } %>
        </div>
      </div>
      <div class="col-8">
        <div class="table-responsive">
          <!-- id="dataTable" -->
          <table class="table table-bordered" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Name Member</th>
                <th>Total</th>
                <th>Bank From</th>
                <th>Title</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= booking.memberId.firstName %> <%=
                  booking.memberId.lastName%>
                </td>
                <td>$ <%= booking.total %></td>
                <td><%= booking.payments.bankFrom %></td>
                <td><%= booking.itemId.title %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>