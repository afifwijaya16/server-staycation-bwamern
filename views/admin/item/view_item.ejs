<%- include('../../partials/header.ejs') %>
<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  <%- include('../../partials/sidebar.ejs') %>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      <%- include('../../partials/navbar.ejs') %>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- message -->
        <%- include('../../partials/message.ejs') %>
        <!-- end message -->
        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Page of <%= title %></h1>
        <% if(action == "view") { %>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item">
            <a
              class="nav-link active"
              id="show-tab"
              data-toggle="tab"
              href="#show"
              role="tab"
              aria-controls="show"
              aria-selected="true"
              >show</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              id="add-tab"
              data-toggle="tab"
              href="#add"
              role="tab"
              aria-controls="add"
              aria-selected="false"
              >add</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <%- include('show_table.ejs') %> <%- include('add_item.ejs') %>
        </div>
        <% } else if(action == "show image") { %>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item">
            <a
              class="nav-link active"
              id="show-image-tab"
              data-toggle="tab"
              href="#show-image"
              role="tab"
              aria-controls="show-image"
              aria-selected="true"
              >Show Image</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <%- include('show_image.ejs') %>
        </div>
        <% } else { %>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item">
            <a
              class="nav-link active"
              id="edit-tab"
              data-toggle="tab"
              href="#edit"
              role="tab"
              aria-controls="edit"
              aria-selected="true"
              >Update Item</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <%- include('edit_item.ejs') %>
        </div>
        <% } %>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%- include('../../partials/footer.ejs') %>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<%- include('../../partials/js.ejs') %>
<script>
  CKEDITOR.replace("about");
</script>
