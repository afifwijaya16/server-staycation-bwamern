<div
  class="tab-pane fade show active"
  id="feature"
  role="tabpanel"
  aria-labelledby="feature-tab"
>
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-5">
          <form
            action="/admin/item/add/feature"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                name="name"
                placeholder="Enter name"
                required
              />
            </div>
            <div class="form-group">
              <label for="name">QTY</label>
              <input
                type="number"
                class="form-control"
                name="qty"
                placeholder="Enter qty"
                required
              />
            </div>
            <div class="form-group">
              <label for="name">Image</label>
              <input type="file" class="form-control" name="image" />
            </div>
            <input
              type="hidden"
              name="itemId"
              class="form-control"
              value="<%= itemId %>"
            />
            <button class="btn btn-primary" type="submit">Save</button>
          </form>
        </div>
        <div class="col-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTable"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>QTY</th>
                  <th>Image</th>
                  <th>Option</th>
                </tr>
              </thead>
              <tbody>
                <% for( let index = 0; index < feature.length; index++ ) { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= feature[index].name %></td>
                  <td><%= feature[index].qty %></td>
                  <td class="text-center">
                    <img
                      src="http://localhost:3000/<%= feature[index].imageUrl %>"
                      alt="imageUrl"
                      width="50px"
                    />
                  </td>
                  <td>
                    <form
                      action="/admin/item/delete/feature/<%= feature[index].id %>/<%= itemId %>?_method=DELETE"
                      method="POST"
                    >
                      <button
                        href="javascript:void()"
                        type="button"
                        class="btn btn-sm btn-warning btn-circle button-update"
                        data-id="<%= feature[index]._id %>"
                        data-name="<%= feature[index].name %>"
                        data-qty="<%= feature[index].qty %>"
                      >
                        <i class="fas fa-edit"></i>
                      </button>

                      <button
                        type="submit"
                        class="btn btn-sm btn-danger btn-circle"
                      >
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
