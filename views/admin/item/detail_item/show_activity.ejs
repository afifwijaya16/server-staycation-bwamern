<div
  class="tab-pane fade"
  id="activity"
  role="tabpanel"
  aria-labelledby="activity-tab"
>
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-5">
          <form
            action="/admin/item"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                name="name"
                placeholder="Enter name"
                required
              />
            </div>
            <div class="form-group">
              <label for="name">Type</label>
              <input
                type="text"
                class="form-control"
                name="type"
                placeholder="Enter type"
                required
              />
            </div>
            <div class="form-group">
              <label for="name">Image</label>
              <input
                type="file"
                class="form-control"
                name="image"
                multiple
                required
              />
            </div>
            <button class="btn btn-primary" type="submit">Save</button>
          </form>
        </div>
        <div class="col-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="datatableactivity"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Image</th>
                  <th>Option</th>
                </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
